# Django
DJANGO_SECRET_KEY=replace-this
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1
LANGUAGE_CODE=ko-kr
TIME_ZONE=Asia/Seoul

# Database (PostgreSQL)
DB_ENGINE=postgresql
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=60

# CORS/CSRF
CORS_ALLOW_ALL_ORIGINS=0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your-domain.com

# Security / Proxy
USE_X_FORWARDED_PROTO=1
SECURE_SSL_REDIRECT=0
SESSION_COOKIE_SECURE=0
CSRF_COOKIE_SECURE=0

# S3 (django-storages)
USE_S3=0
USE_S3_STATIC=0
USE_S3_MEDIA=0
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_SIGNATURE_VERSION=s3v4
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_FILE_OVERWRITE=0
AWS_MEDIA_LOCATION=media
AWS_STATIC_LOCATION=static

# SimpleJWT
SIMPLEJWT_ACCESS_TOKEN_LIFETIME_MINUTES=5
SIMPLEJWT_REFRESH_TOKEN_LIFETIME_DAYS=1
SIMPLEJWT_ROTATE_REFRESH_TOKENS=0
SIMPLEJWT_BLACKLIST_AFTER_ROTATION=1
SIMPLEJWT_ALGORITHM=HS256
# SIMPLEJWT_SIGNING_KEY=
SIMPLEJWT_AUTH_HEADER_TYPES=Bearer

# Kakao OAuth / OCR
KAKAO_REST_API_KEY=
